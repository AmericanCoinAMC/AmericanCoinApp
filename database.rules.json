{
    "rules": {
        ".read": "true",
        ".write": "auth != null",

        //Users Related
        "users": {
            ".indexOn": ["isAdmin", "email"]
        },

        //Posts Related
        "posts": {
            ".indexOn": ["url", "timestamp"]
        },
        "sourcePosts": {
            "$sourceKey": {
                "$categoryKey": {
                    ".indexOn": ["timestamp"]
                }
            }
        },
        "categoryPosts": {
            "$categoryKey": {
                ".indexOn": ["timestamp"]
            }
        },
        "hashtagPosts": {
            "$hashtagKey": {
                ".indexOn": ["timestamp"]
            }
        },
        "pendingPosts": {
            ".indexOn": ["url", "timestamp"]
        },
        "userPendingPosts": {
            "$userKey": {
                ".indexOn": ["timestamp"]
            }
        },

        //Sources Related
        "sources": {
            ".indexOn": ["timestamp"]
        },

        //Orion Related
        "orionConsole": {
            ".indexOn": ["timestamp", "type"]
        }

    }
}